{% extends 'cms/base.html.twig' %}
{% trans_default_domain "admin" %}

{% block title %}{{ 'sections.mentions.index.title'|trans }}{% endblock %}

{% block body %}
<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">
                    <i class="m-menu__link-icon flaticon-chat"></i>
                    {{ 'sections.mentions.index.title'|trans }}
                </h3>
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item">
                        <a href="{{ path('mention_new') }}" class="btn btn-label-warning btn-bold btn-sm btn-icon-h">
                            <i class="flaticon-plus"></i> {{ 'global.actions.create'|trans }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END: Subheader -->
    <div class="m-content">

        {% if pagination %}
        <div class="m-section">
            <div class="m-portlet">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>{{ 'entities.mention.fields.body'|trans }}</th>
                            <th>{{ 'entities.mention.fields.lawyers'|trans }}</th>
                            <th colspan="2" style="width:10%;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for mention in pagination %}
                        <tr>
                            <td>{{ mention.translate('es').body|striptags|length > 100 ? mention.translate('es').body|striptags|slice(0, 100) ~ '...' : mention.translate('es').body|striptags }}</td>
                            <td>
                                {% set lawyers = '' %}
                                {% for lawyer in mention.lawyers %}
                                    {% set lawyers = lawyers ~ lawyer.fullName %}
                                {% endfor %}
                                {{ lawyers }}
                            </td>
                            <td>
                                <a class="btn btn-metal btn-sm m-btn m-btn--icon m-btn--icon-only m-btn--pill" href="{{ path('mention_edit', {'id': mention.id}) }}">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="m-section">
            {{ knp_pagination_render(pagination) }}
        </div>

        {% else %}
        <div class="row">
            <div class="col">
                <div class="alert alert-elevate fade show" role="alert">
                    {{ 'global.messages.noRecordsFound'|trans }}
                </div>
            </div>
        </div>
        {% endif %}
    </div>

</div>
{% endblock %}