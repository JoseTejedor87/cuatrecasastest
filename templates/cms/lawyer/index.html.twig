{% extends 'cms/base.html.twig' %}

{% block title %}Lawyer index{% endblock %}

{% block body %}
<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title ">
                    <i class="m-menu__link-icon flaticon-users"></i>
                    {{ 'admin.lawyers.index.title'|trans }}
                    <a href="{{ path('lawyer_new') }}" class="btn btn-label-warning btn-bold btn-sm btn-icon-h">
                        <i class="flaticon-plus"></i> {{ 'admin.lawyers.index.create_link'|trans }}
                    </a>
                </h3>
            </div>
        </div>
    </div>
    <!-- END: Subheader -->
    <div class="m-content">

        {% if pagination %}
        <div class="m-section">
            <div class="m-portlet">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th{% if pagination.isSorted('name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Name', 'name') }}</th>
                            <th{% if pagination.isSorted('name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Surname', 'surname') }}</th>
                            <th{% if pagination.isSorted('name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Email', 'email') }}</th>
                            <th{% if pagination.isSorted('name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Type', 'lawyerType') }}</th>
                            <th{% if pagination.isSorted('name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Updated', 'updatedAt') }}</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for lawyer in pagination %}
                        <tr>
                            <td>{{ lawyer.name }}</td>
                            <td>{{ lawyer.surname }}</td>
                            <td>{{ lawyer.email }}</td>
                            <td>{{ lawyer.lawyerType }}</td>
                            <td>{{ lawyer.updatedAt ? lawyer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a class="btn btn-success m-btn m-btn--icon btn-sm m-btn--icon-only"
                                    href="{{ path('lawyer_show', {'id': lawyer.id}) }}"><i class="fa fa-eye"></i> </a>
                                <a class="btn btn-info m-btn m-btn--icon btn-sm m-btn--icon-only"
                                    href="{{ path('lawyer_edit', {'id': lawyer.id}) }}"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="m-section">
            {{ knp_pagination_render(pagination) }}
        </div>

        {% else %}
        <div class="row">
            <div class="col">
                <div class="alert alert-elevate fade show" role="alert">
                    No records found
                </div>
            </div>
        </div>
        {% endif %}
    </div>

</div>
{% endblock %}