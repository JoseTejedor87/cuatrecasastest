{% extends 'cms/base.html.twig' %}

{% block title %}Lawyer index{% endblock %}

{% block body %}
<div class="m-grid m-grid--hor m-grid--root m-page">
    {% include 'cms/tools/head.html.twig' %}
    <!-- begin::Body -->
    <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
        <!-- BEGIN: Left Aside -->
        <button class="m-aside-left-close  m-aside-left-close--skin-dark " id="m_aside_left_close_btn">
            <i class="la la-close"></i>
        </button>
        {% include 'cms/tools/menu.html.twig' %}
        <!-- END: Left Aside -->
        <div class="m-grid__item m-grid__item--fluid m-wrapper">
            <!-- BEGIN: Subheader -->
            <div class="m-subheader ">
                <div class="d-flex align-items-center">
                    <div class="mr-auto">
                        <h3 class="m-subheader__title ">
                            Lawyer
                        </h3>
                    </div>
                </div>
            </div>
            <!-- END: Subheader -->
            <div class="m-content">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>UserId</th>
                            <th>Creation_date</th>
                            <th>Update_date</th>
                            <th>Role</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Fax</th>
                            <th>Photo</th>
                            <th>Lawyer_type</th>
                            <th>Status</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for lawyer in lawyers %}
                        <tr>
                            <td>{{ lawyer.id }}</td>
                            <td>{{ lawyer.userId }}</td>
                            <td>{{ lawyer.creationDate ? lawyer.creationDate|date('Y-m-d') : '' }}</td>
                            <td>{{ lawyer.updateDate ? lawyer.updateDate|date('Y-m-d') : '' }}</td>
                            <td>{{ lawyer.role }}</td>
                            <td>{{ lawyer.name }}</td>
                            <td>{{ lawyer.surname }}</td>
                            <td>{{ lawyer.email }}</td>
                            <td>{{ lawyer.phone }}</td>
                            <td>{{ lawyer.fax }}</td>
                            <td>{{ lawyer.photo }}</td>
                            <td>{{ lawyer.lawyerType }}</td>
                            <td>{{ lawyer.status }}</td>
                            <td>
                                <a class="btn btn-success m-btn m-btn--icon btn-sm m-btn--icon-only"
                                    href="{{ path('lawyer_show', {'id': lawyer.id}) }}"><i class="fa fa-eye"></i> </a>
                                <a class="btn btn-info m-btn m-btn--icon btn-sm m-btn--icon-only"
                                    href="{{ path('lawyer_edit', {'id': lawyer.id}) }}"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="14">no records found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {# <a href="{{ path('lawyer_new') }}">Create new</a> #}
            </div>
        </div>
    </div>
    <!-- end:: Body -->
    {% include 'cms/tools/footer.html.twig' %}

</div>
{% endblock %}