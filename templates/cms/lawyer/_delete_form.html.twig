<form method="post" action="{{ path('lawyer_delete', {'id': lawyer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lawyer.id) }}">
    <button class="btn">Delete</button>
</form>
