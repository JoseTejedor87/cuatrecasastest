<div class="row">
    <div class="col-md-7">
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.principal) }}


                {#{ form_row(form.country) }#}
{#                {{ form_row(form.contact) }}#}

            </div>
            <div class="col-md-12">
                {{ translatableField.partialTranslations(form.translations, ['title']) }}
{#                {{ form_row(form.fax) }}#}
{#                {{ form_row(form.phone) }}                #}

            </div>
            <div class="col-md-12">

