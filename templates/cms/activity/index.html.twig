{% extends 'cms/base.html.twig' %}

{% block title %}Activity index{% endblock %}

{% block body %}
<div class="m-grid m-grid--hor m-grid--root m-page">
    {% include 'cms/tools/head.html.twig' %}
    <!-- begin::Body -->
    <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
        <!-- BEGIN: Left Aside -->
        <button class="m-aside-left-close  m-aside-left-close--skin-dark " id="m_aside_left_close_btn">
            <i class="la la-close"></i>
        </button>
        {% include 'cms/tools/menu.html.twig' %}
        <!-- END: Left Aside -->
        <div class="m-grid__item m-grid__item--fluid m-wrapper">
            <!-- BEGIN: Subheader -->
            <div class="m-subheader ">
                <div class="d-flex align-items-center">
                    <div class="mr-auto">
                        <h3 class="m-subheader__title ">
                            Activity
                        </h3>
                    </div>
                </div>
            </div>
            <!-- END: Subheader -->
            <div class="m-content">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for activity in activities %}
                        <tr>
                            <td>{{ activity.id }}</td>
                            <td>{{ activity.translate('es').title }}</td>
                            <td>{{ activity.translate('es').description|length > 150 ? activity.translate('es').description|slice(0, 150) ~ '...' : activity.translate('es').description  }} </td>
                            <td>
                                <a class="btn btn-success m-btn m-btn--icon btn-sm m-btn--icon-only"
                                    href="{{ path('activity_show', {'id': activity.id}) }}"><i class="fa fa-eye"></i>
                                </a>
                                <a class="btn btn-info m-btn m-btn--icon btn-sm m-btn--icon-only"
                                    href="{{ path('activity_edit', {'id': activity.id}) }}"><i
                                        class="fa fa-edit"></i></a>
                            </td>
                            
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="2">no records found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <!-- end:: Body -->
    {% include 'cms/tools/footer.html.twig' %}

</div>
{% endblock %}