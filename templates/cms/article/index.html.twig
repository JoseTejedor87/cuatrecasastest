{% extends 'cms/base.html.twig' %}
{% trans_default_domain "admin" %}

{% block title %}{{ 'sections.article.index.title'|trans }}{% endblock %}

{% block body %}
<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">
                    <i class="m-menu__link-icon flaticon-file"></i>
                    {{ 'sections.article.index.title'|trans }}
                </h3>
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item">
                        <a href="{{ path('articles_new') }}" class="btn btn-label-warning btn-bold btn-sm btn-icon-h">
                            <i class="flaticon-plus"></i> {{ 'global.actions.create'|trans }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END: Subheader -->
    <div class="m-content">

        {% if pagination %}
        <div class="m-section">
            <div class="m-portlet">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>{{ knp_pagination_sortable(pagination, 'entities.article.fields.title'|trans, 'title') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'entities.article.fields.publication_date'|trans, 'publication_date') }}</th>
                            <th colspan="2" style="width:10%;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in pagination %}
                        <tr>
                            <td>{{ article.translate(app.request.getLocale()).title ?  article.translate(app.request.getLocale()).title : article.translate('en').title}}</td>
                            <td>{{ article.publicationdate ? article.publicationdate|date('d-m-Y') : ''  }}</td>
                            <td class="text-nowrap">
                                {% include 'cms/tools/languageStatus.html.twig' with {'values':article.languages} %}
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm m-btn m-btn--icon m-btn--icon-only m-btn--pill" href="{{ path('articles_edit', {'id': article.id}) }}">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="m-section">
            {{ knp_pagination_render(pagination) }}
        </div>

        {% else %}
        <div class="row">
            <div class="col">
                <div class="alert alert-elevate fade show" role="alert">
                    {{ 'global.messages.noRecordsFound'|trans }}
                </div>
            </div>
        </div>
        {% endif %}
    </div>

</div>
{% endblock %}

