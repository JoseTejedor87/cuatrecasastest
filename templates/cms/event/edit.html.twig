{% extends 'cms/base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}
<div class="m-grid m-grid--hor m-grid--root m-page">
    {% include 'cms/tools/head.html.twig' %}
    <!-- begin::Body -->
    <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
        <!-- BEGIN: Left Aside -->
        <button class="m-aside-left-close  m-aside-left-close--skin-dark " id="m_aside_left_close_btn">
            <i class="la la-close"></i>
        </button>
        {% include 'cms/tools/menu.html.twig' %}
        <!-- END: Left Aside -->
        <div class="m-grid__item m-grid__item--fluid m-wrapper">
            <div class="m-content">
                <div class="row justify-content-md-center">
                    <div class="col-md-8">
                        <div class="m-portlet">
                            <div class="m-portlet__head">
                                <div class="m-portlet__head-caption">
                                    <div class="m-portlet__head-title">
                                        <h3 class="m-portlet__head-text">
                                            Edit Event
                                        </h3>
                                    </div>
                                </div>
                            </div>
                            <div class="m-portlet__body">
                                {{ include('cms/event/_form.html.twig', {'button_label': 'Update'}) }}
                            </div>
                        </div>
                        <a href="{{ path('event_index') }}">back to list</a>

                        {{ include('cms/event/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end:: Body -->
    {% include 'cms/tools/footer.html.twig' %}

</div>
{% endblock %}