<section class="boxnews boxnews--products boxnews--products--three">
    <div class="container">
        <div class="row page__section">
            <div class="col">
                <div class="boxnews__list">
                    {% for insight in insights %}
                        {% if insight %}
                            {% if insight.photo %}
                                {% set photo_path = asset('/resources/' ~ insight.photo.fileName)|imagine_filter('insights_grid') %}
                            {% else %}
                                {% set photo_path = asset('web/assets/vector/Picto_03_1920x1080.png')|imagine_filter('insights_grid') %}
                            {% endif %}
                        {% endif %}
                        <article class="boxnews__item">
                            <div class="boxnews__header">
                                <div class="boxnews__type">
                                    <a href="#" class="">{{ insight.translate(app.request.getLocale()).title|raw }}</a>
                                </div>
                            </div>
                            <div class="boxnews__content">
                                <div class="boxnews__excerpt">
                                    {{ insight.translate(app.request.getLocale()).summary|raw }}
                                </div>
                                <a href="#">
                                    <div class="boxnews__img" style="background-image: url('{{ (photo_path is defined) ? photo_path : ""}}');">
                                </a>
                            </div>
                        </article>
                    {% endfor %}
                </div>
                {% if insights|length > 3 %}
                <div class="viewmore__button">
                    <button type="button" class="btn btn__viewmore">{{ 'global.messages.load_more'|trans }}</button>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>
