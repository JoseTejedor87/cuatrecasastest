{% extends 'web/base.html.twig' %}

{% block stylesheets %}
<!-- Slider CSS -->
<link href="{{ asset('web/vendor/swiper/css/swiper.min.css') }}" rel="stylesheet">
{% endblock %}

{% block main %}

    <main role="main">
        <article class="container">

            <header class="row page__header page__header--opacity" style="background-image: url('{{ asset('web/assets/img/drew-beamer-5DD7-L4A4Uw-unsplash.jpg') }}')">
                <div class="col">
                    <div class="info__block">
                        <h1 class="page__title">
                            Áreas de práctica
                        </h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#">Inicio</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Áreas de práctica
                                </li>
                            </ol>
                        </nav>
                    </div>
                    <ul class="action__links">
                        <li><a href="#"><i class="material-icons">share</i></a></li>
                        <li><a href="#"><i class="material-icons">print</i></a></li>
                        <li><a href="#"><i class="material-icons">bookmark_border</i></a></li>
                    </ul>
                </div>
            </header>

            <section class="tabs__component">
                <!-- Tabs -->
                <div class="row">
                    <div class="col tabs__component__tabs">
                        <ul class="nav">
                            <li class="nav-item">
                                <a href="{{ relative_path('/services/practiceAreas')}}" class="nav-link">Áreas de práctica</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ relative_path('/services/desks')}}" class="nav-link active">Desks</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ relative_path('/services/products')}}" class="nav-link">Otros servicios</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Content -->
                <div class="tabs__component__content">
                    <div class="row page__section">
                        <div class="col">
                            <ul class="buttons__list">
                                {% for desk in desks %}
                                    {% if desk.translate(app.request.getLocale()).title and desk.highlighted == 1 %}
                                    <li class="buttons__list__item">
                                        <a class="btn__subcat" href="{{ relative_path('/'~app.request.getLocale()~'/services/serviceDetail/')}}{{ (desk.translate(app.request.getLocale()).slug ? desk.translate(app.request.getLocale()).slug : '' ) }}">{{ desk.translate(app.request.getLocale()).title|raw  }}</a>
                                    </li>
                                    {% endif %}
                                {% endfor %}
                                {# <li class="buttons__list__item">
                                    <a class="btn__subcat" href="consumptionRetail/medio-ambiente">Medio Ambiente</a>
                                </li> #}

                            </ul>
                        </div>
                    </div>
                </div>
            </section>

        </article>
    </main>

    {% include 'web/shared/discover.html.twig' %}
    {% include 'web/shared/career.html.twig' %}
    {% include 'web/shared/call-to-action.html.twig' %}

{% endblock %}

{% block javascripts %}
<!-- Slider JS -->
<script type="text/javascript" src="{{ asset('web/vendor/swiper/js/swiper.min.js') }}"></script>
<script>
    $(function () {
        web.global.sliderNews();
    });
</script>
{% endblock %}
