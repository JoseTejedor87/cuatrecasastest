            <header class="container-fluid">
                <div class="row lawyer__details__header">
                    <div class="col-md-7 lawyer__details__content">
                        <a href="#" class="back__button">volver</a>
                        <h1 class="lawyer__details__name">
                            {{ lawyer.name }} {{ lawyer.surname }}
                        </h1>
                        <h2 class="lawyer__details__position">
                            {{ ('sections.lawyers.lawyerCategoryTypes.' ~ lawyer.lawyerType) | trans }}
                        </h2>
                        <ul class="lawyer__details__scope related__services">
                            {% for activity in lawyer.secondaryActivities %}
                            <li class="related__services__item">
                                <a href="{{ relative_path('/es/activity/consumptionRetail/')}}{{ (activity.translate(app.request.getLocale()).slug ? activity.translate(app.request.getLocale()).slug : '' ) }}" class="related__services__link">
                                    {{ activity.translate(app.request.getLocale()).title}}
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                        <div class="lawyer__details__contact">
                            <div data-address>
                                CUATRECASAS {{ lawyer.office.city }}
                            </div>
                            <div data-telephone>
                                {{ lawyer.phone }}
                            </div>
                            <div data-email>
                                <a href="mailto:{{ lawyer.email }}">
                                    {{ lawyer.email }}
                                </a>
                            </div>
                        </div>
                        <div class="lawyer__details__more">
                            <div data-langs>
                                Español | Inglés
                            </div>
                            <div data-vcard>
                                <a href="#">vcard</a>
                            </div>
                            <div data-cv>
                                <a href="#">CV Completo</a>
                            </div>
                        </div>
                        <ul class="action__links">
                            <li><a href="#"><i class="material-icons">share</i></a></li>
                            <li><a href="#"><i class="material-icons">print</i></a></li>
                            <li><a href="#"><i class="material-icons">bookmark_border</i></a></li>
                        </ul>
                    </div>
                    <div class="col-md-5">
                        <figure class="lawyer__details__media" style="background-image: url('{{ asset('web/assets/img/foto-lawyer-3.jpg') }}');">

                            <!-- server -->
                            <!-- <img src="{{ asset('/resources/' ~ (lawyer.photo ? lawyer.photo.fileName : 'test.jpg' ))  | imagine_filter('square1')  }}" alt="{{ lawyer.name }} {{ lawyer.surname }}" class="lawyer__details__media__photo"> -->

                            <!-- <img src="{{ relative_path('/resources/')}}{{ (lawyer.photo ? lawyer.photo.fileName : '' ) }}" alt="{{ lawyer.name }} {{ lawyer.surname }}" class="lawyer__details__media__photo"> -->

                            <!-- local -->
