{% block menu %}
    <div class="main-nav-wrapper">
        <div class="container-fluid">
            <div class="row">
                <nav id="main-nav" class="col-md-7 navbar navbar-expand-md justify-content-end" aria-label="main-nav">
                    <a href="{{ path('home') }}" class="navbar-brand">
                        <img src="{{ asset('web/assets/logos/4casas.png') }}" alt="Cuatrecasas">
                    </a>
                    <div class="navbar-collapse">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('knowledge_index') }}">{{ 'menu.knowledge' | trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('lawyers_index') }}">{{ 'menu.lawyers' | trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('services_index') }}">{{ 'menu.services' | trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('sectors_index') }}">{{ 'menu.sectors' | trans }}</a>
                            </li>
                        </ul>
                    </div>
                </nav>
                <nav id="about-nav" class="col-md-5 navbar navbar-expand-md justify-content-start" aria-label="about-nav">
                    <div class="navbar-collapse">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Talento</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Estamos en</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">La Firma</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="row">
                <nav id="contact-nav" class="col-md-12 navbar navbar-expand-md" aria-label="contact-nav">
                    <a href="{{ path('home') }}" class="navbar-brand">
                        <img src="{{ asset('web/assets/logos/cuatrecasas.png') }}" alt="Cuatrecasas">
                    </a>
                    <div class="navbar-collapse justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Contacto</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Webs</a>
                            </li>
                            <li class="nav-item region-switcher">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        {{ ('global.regions.' ~ navigation_service.getRegion())|trans }}
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        {% for region in regions %}
                                            {% if region != navigation_service.getRegion() %}
                                                {% set href = navigation_service.getAlternativePath(null, region) %}
                                                {% if href %}
                                                    <a class="dropdown-item" href="{{ href }}">
                                                        {{ ('global.regions.' ~ region)|trans }}
                                                    </a>
                                                {% endif %}
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </li>
                            <li class="nav-item language-switcher">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        {{ language_switcher[navigation_service.getLanguage()] }}
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        {% for language in languages %}
                                            {% if language != navigation_service.getLanguage() %}
                                                {% set href = navigation_service.getAlternativePath(language) %}
                                                {% if href %}
                                                    <a class="dropdown-item" href="{{ href }}">
                                                        {{ language_switcher[language] }}
                                                    </a>
                                                {% endif %}
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}
