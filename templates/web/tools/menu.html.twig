{% block menu %}
    <div id="navDesktop" class="main-nav-wrapper">
        <div class="container" id="primaryNav">
            <div class="row">
                <nav id="mainNav" class="col-lg-7 navbar navbar-expand-md justify-content-end" aria-label="main-nav">
                    <a href="{{ path('home') }}" class="navbar-brand" id="cuatrecasasLogo">
                        <img src="{{ asset('web/assets/logos/4casas.png') }}" alt="Cuatrecasas">
                    </a>
                    <div class="navbar-collapse">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('knowledge_index') }}">{{ 'menu.knowledge'|trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('lawyers_index') }}">{{ 'menu.lawyers'|trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('services_index') }}">{{ 'menu.services'|trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('sectors_index') }}">{{ 'menu.sectors'|trans }}</a>
                            </li>
                        </ul>
                    </div>
                </nav>
                <nav id="aboutNav" class="col-lg-5 navbar navbar-expand-md justify-content-start" aria-label="about-nav">
                    <div class="navbar-collapse">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button">{{ 'menu.career.career'|trans }}</a>
                                <ul class="dropdown-menu dropdown-menu--inline">
                                    <li><a href="#">{{ 'menu.career.career'|trans }}</a></li>
                                    <li><a href="#">{{ 'menu.career.live'|trans }}</a></li>
                                    <li><a href="#">{{ 'menu.career.revolution'|trans }}</a></li>
                                    <li><a href="#">{{ 'menu.career.learn'|trans }}</a></li>
                                    <li><a href="#">{{ 'menu.career.international'|trans }}</a></li>
                                    <li><a href="#">{{ 'menu.career.join'|trans }}</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button">{{ 'menu.offices.offices'|trans }}</a>
                                <ul class="dropdown-menu dropdown-menu--inline">
                                    <li><a href="#">{{ 'menu.offices.vision'|trans }}</a></li>
                                    <li><a href="#">{{ 'menu.offices.spain'|trans }}</a></li>
                                    <li><a href="#">{{ 'menu.offices.portugal'|trans }}</a></li>
                                    <li><a href="#">{{ 'menu.offices.latam'|trans }}</a></li>
                                    <li><a href="#">{{ 'menu.offices.other'|trans }}</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button">{{ 'menu.firm.firm'|trans }}</a>
                                <ul class="dropdown-menu dropdown-menu--inline">
                                    <li><a href="#">{{ 'menu.firm.contribution'|trans }}</a></li>
                                    <li><a href="#">{{ 'menu.firm.diversity'|trans }}</a></li>
                                    <li><a href="#">{{ 'menu.firm.responsability'|trans }}</a></li>
                                    <li><a href="#">{{ 'menu.firm.innovation'|trans }}</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </nav>
                <nav id="userNav" class="navbar" aria-label="user-nav">
                    <ul class="navbar-nav user-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#" id="hamburgerButton"><i class="icon ion-android-menu"></i></a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="container-fluid" id="secondaryNav">
            <div class="row">
                <nav id="contactNav" class="col-md-12 navbar navbar-expand-md" aria-label="contact-nav">
                    <a href="{{ path('home') }}" class="navbar-brand">
                        <img src="{{ asset('web/assets/logos/cuatrecasas.png') }}" alt="Cuatrecasas">
                    </a>
                    <div class="navbar-collapse justify-content-end">
                        <ul class="navbar-nav contact-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="https://www.cuatrecasas.com/es/contacta.html">{{ 'menu.contact'|trans }}</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button">{{ 'menu.webs.webs'|trans }}</a>
                                <ul class="dropdown-menu dropdown-menu--inline">
                                    <li><a href="https://acelera.cuatrecasas.com">{{ 'menu.webs.acelera'|trans }}</a></li>
                                    <li><a href="https://www.cuatrecasas.com/es/firma/instituto_internacional.html">{{ 'menu.webs.rrhh'|trans }}</a></li>
                                    <li><a href="https://www.cuatrecasas.com/es/firma/fundacion_cuatrecasas.html">{{ 'menu.webs.fundacion'|trans }}</a></li>
                                    <li><a href="https://apps.apple.com/es/app/cuatrecasas-actualidad-juridica/id654941019?ls=1">{{ 'menu.webs.app'|trans }}</a></li>
                                    <li><button type="button" class="menu-close" aria-label="Close"></button></li>
                                </ul>
                            </li>
                            <!-- REGION / LANG  -->
                            <li class="nav-item">
                                <a class="nav-link lang-region-toggle" href="#" role="button">
                                    <span class="region">{{ ('global.regions.' ~ navigation_service.getRegion())|trans }}</span>
                                    <span class="lang">{{ language_switcher[navigation_service.getLanguage()] }}</span>
                                </a>
                                <div class="dropdown-menu--inline lang-region-menu">
                                    <div class="langs-nav">
                                        <div class="adapt-txt">{{ 'menu.reg_lang'|trans }}:</div>
                                        <ul class="langs-wrapper">
                                            <li class="nav-item dropdown dropdown--inline">
                                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="careerDropdown" role="button">{{ ('global.regions.' ~ navigation_service.getRegion())|trans }}</a>
                                                <ul class="dropdown-menu">
                                                    {% for region in regions %}
                                                        {% if region != navigation_service.getRegion() %}
                                                            {% set href = navigation_service.getAlternativePath(null, region) %}
                                                            {% if href %}
                                                                <li>
                                                                    <a href="{{ href }}">
                                                                        {{ ('global.regions.' ~ region)|trans }}
                                                                    </a>
                                                                </li>
                                                            {% endif %}
                                                        {% endif %}
                                                    {% endfor %}
                                                </ul>
                                            </li>
                                            <li class="nav-item dropdown dropdown--inline">
                                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="careerDropdown" role="button">{{ language_switcher[navigation_service.getLanguage()] }}</a>
                                                <ul class="dropdown-menu">
                                                    {% for language in languages %}
                                                        {% if language != navigation_service.getLanguage() %}
                                                            {% set href = navigation_service.getAlternativePath(language) %}
                                                            {% if href %}
                                                                <li>
                                                                    <a href="{{ href }}">
                                                                        {{ language_switcher[language] }}
                                                                    </a>
                                                                </li>
                                                            {% endif %}
                                                        {% endif %}
                                                    {% endfor %}
                                                </ul>
                                            </li>
                                        </ul>
                                        <button type="button" class="menu-close langs" aria-label="Close"></button>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}
