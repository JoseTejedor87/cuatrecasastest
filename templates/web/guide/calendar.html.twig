{% block javascripts %}
<script>
    // Load Calendar
    web.global.loadCalendar();

    $(document).ready(function () {
        //initialize swiper when document ready
        var mySwiper = new Swiper ('#sliderEvents', {
            loop: true,
            // navigation: {
            //     nextEl: '.swiper-button-next',
            //     prevEl: '.swiper-button-prev',
            // },
            pagination: {
                el: '.swiper-pagination',
                // dynamicBullets: true,
            },
        })
    });

    // Fav & Cal buttons
    $('.button-favorite, .button-calendar').click(function(e){
        e.preventDefault();
        $(this).toggleClass('on');
        // change literal
        var el = $(this);
        el.text() == el.data("text-original")
            ? el.text(el.data("text-swap"))
            : el.text(el.data("text-original"));
    });

    $('.no-link').click(function(e){
        e.preventDefault();
    });

    $(document).ready(function () {
        // Load DatePicker
        var bd = $('<div class="modal-backdrop calendar"></div>');

        $('#datePicker').datepicker({
            weekStart: 1,
            // todayHighlight: true,
            autoclose: true,
            // clearBtn: true,
            orientation: "left bottom",
            language: "es"
        })
        .on('show', function(e) {
            bd.appendTo(document.body);
        })
        .on('hide', function(e) {
            bd.remove();
        });

        // Toggle calendar
        $('.filter-toggler.fecha').click(function(e){
            e.preventDefault();
            // $('#datePlaceholder').show();
            $('#datePicker').toggle();
            $('#datePicker .input-date').val('');
            $('#datePicker ').datepicker('update');
        });

    });


    // Calendar & List Stuff
    document.addEventListener('DOMContentLoaded', function() {

        var eventCalendar = document.getElementById('eventCalendar');
        var eventList = document.getElementById('eventList');

        $('#viewEventCalendar').click(function(e){
            e.preventDefault();
            $('#eventCalendar').show();
            $('#eventList').hide();
        });

        $('#viewEventList').click(function(e){
            e.preventDefault();
            $('#eventCalendar').hide();
            $('#eventList').show();
        });
    });

</script>
